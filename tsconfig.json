{
  "compilerOptions": {
    "lib": ["es2020"],
    "module": "nodenext",
    "target": "es2020",
    "resolveJsonModule": true,
    "checkJs": true,
    "allowJs": true,
    "moduleResolution": "nodenext",
    "noEmit": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "outDir": "types"
  },
  "include": ["./lib/**/*.js"]
}
